---
// import logo_astro from "/public/favicon.svg"
import "@fontsource/space-grotesk";
---

<div class="container">
	<img src="favicon.svg" alt="logo-astro" width="50px" height="50px" />
	<h1 class="title-logo">Web con Astro</h1>
</div>

<style>
	.container {
		width: 100%;
		height: 90px;
		background-color: #000;
		color: #fff;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.title-logo {
		/* font-family: system-ui;	 */
		font-family: "space grotesk", sans-serif;
	}
</style>

<script>
	const BASE_URL = "https://randomuser.me/api/";
	getUser();

	async function getUser() {
		const response = await fetch(BASE_URL);
		const user = await response.json();
		console.log(user);
	}
	console.log("Log desde astro");
</script>
